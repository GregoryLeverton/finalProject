<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10pt"
            android:text="Movie Title" />


        <EditText
            android:id="@+id/titleinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/title"
            android:inputType="text" />

        <TextView
            android:id="@+id/actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="10pt"
            android:text="Actors"

            />

        <EditText
            android:id="@+id/actorinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/actor"
            android:layout_below="@id/titleinput"
            android:inputType="text"

        />

        <TextView
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actor"
            android:layout_marginTop="13pt"
            android:text="Length"

            />
        <EditText
            android:id="@+id/lengthinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/length"
            android:layout_below="@+id/actorinput"
            android:inputType="text" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lengthinput"
            android:layout_marginTop="10pt"
            android:text="Description" />

        <EditText
            android:id="@+id/descinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lengthinput"
            android:layout_toEndOf="@+id/desc"
            android:inputType="text" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="10pt"
            android:text="Rating"

            />

        <EditText
            android:id="@+id/ratinginput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rating"
            android:layout_below="@+id/descinput"
            android:inputType="text" />


        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginTop="13pt"
            android:text="Poster URL"

            />

        <EditText
            android:id="@+id/urlinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/url"
            android:layout_below="@+id/ratinginput"
            android:inputType="text"
            />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/urlinput"
            android:layout_marginTop="35dp"
            android:text="ADD MOVIE" />

        <TextView
            android:id="@+id/xmltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonAdd"
            android:layout_marginTop="15pt"
            android:paddingTop="1pt"
            android:text="Need suggestions? Click below to add predefined movies"

            />

        <Button
            android:id="@+id/downloadbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xmltext"
            android:layout_marginTop="5pt"
            android:text="DOWNLOAD"/>


</RelativeLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.greg.quizgame.QuizActivity">


    <ListView
        android:id="@+id/list"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_MC"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/new_MC">


    </FrameLayout>


    <Button
        android:id="@+id/new_MC"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_TF"
        android:layout_alignParentStart="true"
        android:text="@string/newMC" />

    <Button
        android:id="@+id/new_TF"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_Num"
        android:layout_alignParentStart="true"
        android:text="@string/newTF" />

    <Button
        android:id="@+id/new_Num"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/loadxml"
        android:layout_alignParentStart="true"
        android:text="@string/newNum" />

    <Button
        android:id="@+id/loadxml"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/stats"
        android:layout_alignParentStart="true"
        android:text="@string/loadWeb" />

    <Button
        android:id="@+id/stats"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress"
        android:layout_alignParentStart="true"
        android:text="@string/getStats" />

    <Button
        android:id="@+id/about"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress"
        android:layout_toEndOf="@+id/stats"
        android:text="@string/about" />


    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />


</RelativeLayout>
